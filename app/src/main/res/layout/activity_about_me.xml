<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AboutMeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#C8C3CF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".AboutMeActivity">

            <TextView
                android:id="@+id/tv_aD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Account Details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                app:layout_constraintStart_toStartOf="@+id/tv_aD"
                app:layout_constraintTop_toBottomOf="@+id/tv_aD" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Email"
                app:layout_constraintEnd_toEndOf="@+id/tv_name"
                app:layout_constraintStart_toStartOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="Balance"
                app:layout_constraintEnd_toEndOf="@+id/tv_email"
                app:layout_constraintStart_toStartOf="@+id/tv_email"
                app:layout_constraintTop_toBottomOf="@+id/tv_email" />

            <TextView
                android:id="@+id/tv_un"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="TextView"
                android:textColor="#050000"
                app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_name"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="TextView"
                android:textColor="#050000"
                app:layout_constraintBottom_toBottomOf="@+id/tv_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_email"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_userBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="TextView"
                android:textColor="#012B60"
                app:layout_constraintBottom_toBottomOf="@+id/tv_balance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_balance"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/tv_topUpAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="7"
                android:hint="Top Up Amount"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_aD"
                app:layout_constraintStart_toStartOf="@+id/tv_aD"
                app:layout_constraintTop_toBottomOf="@+id/tv_balance"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/buttonTopUp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/purple_700"
                android:text="TOP UP"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_topUpAmount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_topUpAmount" />

            <Button
                android:id="@+id/buttonRegisterStore"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/purple_700"
                android:text="REGISTER STORE"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_topUpAmount" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_registerStore"
                android:layout_width="324dp"
                android:layout_height="350dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"
                app:cardBackgroundColor="#C8C3CF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_registerStore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Register Store"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/et_storeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-10dp"
                        android:layout_marginTop="30dp"
                        android:ems="18"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_registerStore"
                        app:layout_constraintTop_toBottomOf="@+id/tv_registerStore" />

                    <EditText
                        android:id="@+id/et_storeAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:ems="18"
                        android:hint="Address"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/et_storeName"
                        app:layout_constraintStart_toStartOf="@+id/et_storeName"
                        app:layout_constraintTop_toBottomOf="@+id/et_storeName" />

                    <EditText
                        android:id="@+id/et_storePhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:ems="18"
                        android:hint="Phone Number"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/et_storeAddress"
                        app:layout_constraintStart_toStartOf="@+id/et_storeAddress"
                        app:layout_constraintTop_toBottomOf="@+id/et_storeAddress" />

                    <Button
                        android:id="@+id/btnRegisterStoreConfirm"
                        android:layout_width="130dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="#673AB7"
                        android:text="REGISTER"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/et_storePhoneNumber"
                        app:layout_constraintTop_toBottomOf="@+id/et_storePhoneNumber" />

                    <Button
                        android:id="@+id/btnRegisterStoreCancel"
                        android:layout_width="130dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#673AB7"
                        android:text="CANCEL"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/btnRegisterStoreConfirm"
                        app:layout_constraintEnd_toEndOf="@+id/et_storePhoneNumber"
                        app:layout_constraintTop_toTopOf="@+id/btnRegisterStoreConfirm" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_storeExists"
                android:layout_width="324dp"
                android:layout_height="300dp"
                android:layout_marginBottom="40dp"
                android:visibility="invisible"
                app:cardBackgroundColor="#C8C3CF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_Store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Store"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_sN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="8dp"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="@+id/tv_Store"
                        app:layout_constraintTop_toBottomOf="@+id/tv_Store" />

                    <TextView
                        android:id="@+id/tv_sA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:text="Address"
                        app:layout_constraintStart_toStartOf="@+id/tv_sN"
                        app:layout_constraintTop_toBottomOf="@+id/tv_sN" />

                    <TextView
                        android:id="@+id/tv_sPN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:text="Phone Number"
                        app:layout_constraintStart_toStartOf="@+id/tv_sA"
                        app:layout_constraintTop_toBottomOf="@+id/tv_sA" />

                    <TextView
                        android:id="@+id/tv_sNI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="TextView"
                        android:textColor="#050000"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_sN"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_sN" />

                    <TextView
                        android:id="@+id/tv_sAI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="TextView"
                        android:textColor="#050000"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_sA"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_sA" />

                    <TextView
                        android:id="@+id/tv_sPNI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="TextView"
                        android:textColor="#050000"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_sPN"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_sPN" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>